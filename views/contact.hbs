{{> header this.navigation }}
{{> video-bg }}
<main>
	<div class="container contact">
		<div class="row">
			<div class="inner-container col-12 flex in-column center-center light" >
				<div class="company-logo">
					<img src="{{logo.url}}" alt="{{logo.alt}}" title="{{logo.title}}" />
				</div>
				<div class="company-contact">
					<div class="section-title_small">
						<h5>{{contact.title}}</h5>
					</div>
					<div class="contact-data">
						<div>
							<strong>e-mail:</strong> {{contact.email}}
						</div>
						<div>
							<strong>adres:</strong> {{{contact.adress}}}
						</div>							
					</div>
				</div>
				<div class="sign-in_form">
					<form id="contact-form" action="/form-send-message" method="post">
						<div class="row">
							<div class="col-md-6 col-sm-12">
								<label for='name'>{{form.name}}:</label>
								<input type="text" name="name"  required/>
							</div>
							<div class="col-md-6 col-sm-12">
								<label for='surname'>{{form.surname}}:</label>
								<input type="text" name="surname" />
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-sm-12">
								<label for='email'>{{form.email}}:</label>
								<input type="email" name="email" required/>
							</div>
						</div>
						<div class="row">
							<div class="col-12 col-sm-12">
								<textarea name="message" rows="10" cols="50">{{form.textarea}}</textarea>
							</div>
						</div>
						<div>
							<input 
								type="submit" 
								value="{{form.button.text}}"
								class="button {{form.button.meta.class}}"
								/>
						</div>
					</form>
					<div class="policy_link">{{> link}}</div>
					<div id="alert-box" class="alert-box"></div>
				</div>
			</div>
		</div>
	</div>
</main>



